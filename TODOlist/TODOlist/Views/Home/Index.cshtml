@model IEnumerable<ToDoItem>

<div class="row">
    <table class="table table-bordered table-stripped mt-2">
        <thead>
            <tr>
                <th>Name</th>
                <th>Status</th>
                <th class="w-25"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (ToDoItem item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.StatusId</td>
                    <td>
                        @if (item.StatusId == "Ready")
                        {
                            <form asp-action="MarkComplete" method="post">
                                <button type="submit" class="btn btn-primary btn-sm"
                                name="id" value="@item.Id">
                                    Mark Completed
                                </button>
                            </form>
                            <form asp-action="MarkWIP" method="post">
                                <button type="submit" class="btn btn-primary btn-sm"
                                name="id" value="@item.Id">
                                    Mark WIP
                                </button>
                            </form>
                             <form asp-action="DeleteTask" method="post">
                                <button type="submit" class="btn btn-primary btn-sm"
                                name="id" value="@item.Id">
                                    Delete
                                </button>
                            </form>
                        } else if (item.StatusId == "In Progress")
                        {
                            <form asp-action="MarkComplete" method="post">
                                <button type="submit" class="btn btn-primary btn-sm"
                                name="id" value="@item.Id">
                                    Mark Completed
                                </button>
                            </form>
                            <form asp-action="DeleteTask" method="post">
                                    <button type="submit" class="btn btn-primary btn-sm"
                                    name="id" value="@item.Id">
                                        Delete
                                        </button>
                             </form>
                        }
                        else if (item.StatusId == "Done")
                        {
                             <form asp-action="DeleteTask" method="post">
                                     <button type="submit" class="btn btn-primary btn-sm"
                                      name="id" value="@item.Id">
                                        Delete
                                      </button>
                             </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <form asp-action="Add" method="get">
        <button type="submit" class="btn btn-primary">Add</button>
    </form>
</div>
